<div class="container-fluid">
	<div class="row" style="margin-top:10px;">
		<div class="col-md-4">
			{{image-with-upload center=model}}

		</div>
		<div class="col-md-4 details">
				{{#if isCurrentCenter}}
					<div {{action 'editCenterInfo'}} class="pull-right">
						{{fa-icon icon="edit" title="Επεξεργασία"}}
					</div>
				{{/if}}
				{{#if isEditing}}
					<form>
					  <div class="form-group">
					    <label for="address_input">Διεύθυνση</label>
					    {{input value=model.address type="text" class="form-control" id="address_input" placeholder="Διεύθυνση"  required='required'}}
					  </div>
					  <div class="form-group">
					    <label for="phone_input">Τηλέφωνο</label>
					    {{input value=model.phoneNumber type="text" class="form-control" id="phone_input" placeholder="Τηλέφωνο"  required='required'}}
					  </div>
					  <div class="form-group">
					    <label for="refugees_input">Αριθμός Προσφύγων</label>
					    {{input value=model.refugeesNumber type="text" class="form-control" id="refugees_input" placeholder="Αριθμός Προσφύγων" required='required'}}
					  </div>
					  <div class="form-group">
					    <label for="mail_input">E-mail</label>
					    {{input value=model.contactEmail type="email" class="form-control" id="mail_input" placeholder="E-mail"  required='required'}}
					  </div>
					  <div class="form-group">
					    <label for="mail_input">Περιγραφή</label>
					    {{textarea value=model.description type="text" class="form-control" id="desc_input" placeholder="Περιγραφή"  required='required'}}
					  </div>
					  <button {{action 'submitInfo'}} type="submit" class="btn btn-success">Καταχώρηση</button>
					  <button {{action 'cancelInfo'}} type="submit" class="btn btn-warning">Ακύρωση</button>
					</form>
				{{else}}
					<p id="address">{{fa-icon icon="map" title="Διεύθυνση"}} {{model.address}} </p>
					<p id="phone">{{fa-icon icon="phone" title="Τηλέφωνο"}} {{model.phoneNumber}} </p>
					<p id="refugees">{{fa-icon icon="users" title="Πρόσφυγες"}} {{model.refugeesNumber}} </p>
					<p id="mail">{{fa-icon icon="envelope" title="E-mail"}} {{model.contactEmail}} </p>
					<p id="description">{{fa-icon icon="book" title="Περιγραφή"}} {{model.description}} </p>
				{{/if}}
					<p id="type">{{model.centerType}} </p>
		</div>
		<div class="col-md-4">
			{{google-map-one-center center=model isCurrentCenter=isCurrentCenter}}
		</div>
	</div>
	<div class="row" style="margin-top:10px;">
		{{center-needs center=model isCurrentCenter=isCurrentCenter}}
	</div>	
</div>
{{outlet}}
