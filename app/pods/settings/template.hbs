<div class="container-fluid">
	<div class="row">
		<div class="col-md-4 col-md-offset-4 col-xs-10 col-xs-offset-1">
			<h3> Αλλαγή Κωδικού </h3>
			<form {{action 'change_password' on='submit'}}>
			  <div class="form-group">
			    <label for="email_login">Κωδικός</label>
			    {{input value=password type="password" class="form-control" id="password" placeholder="Email" required='required'}}
			  </div>
			  <div class="form-group">
			    <label for="phone_input">Επιβεβαίωση Κωδικού</label>
			    {{input value=password_confirmation type="password" class="form-control" id="password_confirmation" placeholder="Κωδικός"  required='required'}}
			  </div>
			  <button type="submit">Καταχώρηση</button>
			  {{#if notMatching}}
			    <p class="alert alert-danger" style="margin-top: 15px;">Οι κωδικοί δεν ειναι ίδιοι!</p>
			  {{/if}}
			  {{#if successful}}
			    <p class="alert alert-success" style="margin-top: 15px;">Επιτυχής Αλλαγή!</p>
			  {{/if}}
			</form>
		</div>
	</div>
</div>
{{outlet}}
