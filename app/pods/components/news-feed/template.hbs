<div class="news-feed">
	<h4 class="text-center alert alert-info"> Τρέχοντα Νέα </h4>
	<ul class="list-group ">
		{{#if news}}
			{{#each news as |new|}}
				<li class="list-group-item"> <a style="color: black;" href="{{href-to 'center' new.center}}"> {{new.content}} </a>  
				<span style="color: #168ccc" class="pull-right"> {{moment-format new.createdAt 'D MMM, h:mm:ss a'}} </span> </li>
			{{/each}}
		{{/if}}
	</ul>
</div>

{{yield}}
