{{!-- <button style="margin-top: 10px; border-radius: 0;" {{action 'toggleSearch'}} class="btn btn-primary col-xs-12"> Εξειδικευμένη Αναζήτηση</button> --}}
<div class="row">
  <a class="advanced-search-prompt pull-right" {{action 'toggleSearch'}}> Εξειδικευμένη Αναζήτηση </a>
</div>


{{#if showSearch class="search"}}
<div class="row">
  <div class="col-md-3 col-xs-6"><b> Αναζήτηση βάσει κωδικής λέξης: </b></div>
  <div class="col-md-4 col-xs-6">
      {{#power-select-multiple style="border-radius: 0;"
        options=keywords
        selected=keys
        searchField="keyword"
        onchange=(action (mut keys))
        as |keyword|
      }}
        {{keyword.keyword}}
      {{/power-select-multiple}}
  </div>
</div>  
<div class="row" style="margin-top: 5px;">
  <div class="col-md-3 col-xs-6"> <b>Αναζήτηση βάσει τύπου ομάδας: </b></div>
  <div class="col-md-4 col-xs-6 select-container">
    {{#x-select class="form-control select" value=selected_type action='filter_by_type'}}
      {{#x-option value=0}}Κανένας{{/x-option}}
      {{#x-option value=1}}Αυτοδιαχειριζόμενη δομή{{/x-option}}
      {{#x-option value=2}}Μαγειρεία{{/x-option}}
      {{#x-option value=3}}Δομές πρώτης υποδοχής{{/x-option}}
      {{#x-option value=4}}Ανοιχτές δομές φιλοξενίας{{/x-option}}
      {{#x-option value=5}}Ναυαγωσωστικές ομάδες{{/x-option}}
    {{/x-select}}
  </div>
</div>
{{/if}}

<div class="row" style="margin-top: 10px;">
  <button class="col-xs-4 col-xs-offset-7" {{action 'clear'}}>Καθαρισμός</button>
</div>

{{#if loading}}
  <div class="loader" style="margin-top: 15%;">
    <svg class="circular" viewBox="25 25 50 50">
      <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10"/>
    </svg>
</div>
{{else}}
  <div class="row" id="centers">
  <!-- item list -->
  	{{#each filt_centers as |center|}}
    		<div class="col-xs-6">
      	 {{box-center center=center}}
    		</div>
  	{{/each}}
  </div>
{{/if}}
{{yield}}
