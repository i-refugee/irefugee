          </div>
        {{/if}}
        {{#if (eq need.id "3")}}
          <div class="col-md-2 col-xs-1 col-xs-offset-1 col-md-offset-0">
            <span {{action 'filter_by_needs' need}} class="fa-stack fa-2x">
                {{fa-icon id=need.id icon="circle" class="fa-stack-2x icon-background-grey"}}
                {{fa-icon title=need.name icon="fa fa-medkit" class="fa-stack-1x black"}}
            </span>
            <div {{action 'filter_by_needs' need}}><h5>Φάρμακα</h5></div>
          </div>
        {{/if}}
        {{#if (eq need.id "4")}}
          <div class="col-md-2 col-xs-1 col-xs-offset-1 col-md-offset-0">
            <span {{action 'filter_by_needs' need}} class="fa-stack fa-2x">
                {{fa-icon id=need.id icon="circle" class="fa-stack-2x icon-background-grey"}}
